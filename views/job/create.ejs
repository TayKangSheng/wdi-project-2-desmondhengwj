<div class="container">
  <form action="/jobs" method="POST">

    <div class="form-group">
      <label for="location">Location</label>
      <input type="text" class="form-control" id="locationInput" placeholder="Location" name="location">
    </div>

    <div class="form-group">
      <label for="date">Date</label>
      <input type="text" class="form-control" id="dateInput" placeholder="Date" name="date">
    </div>

    <div class="form-group">
      <label for="startTime">Start Time</label>
      <input type="text" class="form-control" id="startTimeInput" placeholder="Start Time" name="startTime">
    </div>

    <div class="form-group">
      <label for="endTime">End Time</label>
      <input type="text" class="form-control" id="endTimeInput" placeholder="End Time" name="endTime">
    </div>

    <button type="submit" class="btn btn-default">Submit</button>
  </form>
</div>
